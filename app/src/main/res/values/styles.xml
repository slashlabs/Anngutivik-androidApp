<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- the theme applied to the application or activity -->
    <style name="custom_actionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Colors presets -->
    <color name="slashlabsBlue">#2babdf</color>
    <color name="menuDarkGrey">#262626</color>

    <!-- ActionBar styles -->
    <style name="action_bar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/slashlabsBlue</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:displayOptions"></item>
    </style>



    <style name="abaker_default_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/abaker_button</item>
    </style>

    <!-- ViewPagerIndicator styles -->
    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">#FFFFFFFF</item>
        <item name="selectedColor">@color/slashlabsBlue</item>
    </style>
</resources>
